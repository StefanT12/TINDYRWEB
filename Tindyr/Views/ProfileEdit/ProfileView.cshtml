@addTagHelper *,Microsoft.AspNetCore.MVC.TagHelpers
@model Tindyr.Models.ProfileEdit.AllUserInformationModel
@*@model Tindyr.Models.ProfileEdit.AllUserInformationModel*@
@{
    ViewData["Title"] = "ProfileEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <br />
    <br />
    <h1 class="view-h1">View your profile</h1>
    <article class="view">
        <section class="view-images">
            <div class="view-image">
                <img src= @Url.Content("~/userimages/"+User.Identity.Name+"front.jpg") alt="placeholderpic" >
            </div>

            <div>
                <img src="http://placekitten.com/250/120" alt="placeholderpic">
                <img src="http://placekitten.com/250/120" alt="placeholderpic">
                <img src="http://placekitten.com/250/120" alt="placeholderpic">

            </div>
        </section>

        <section>
            <h3>@Model.AnimalModel.AnimalName</h3>
            <p><span><i class="fas fa-paw"></i></span> @Model.AnimalModel.AnimalType, @Model.AnimalModel.AnimalBreed</p>
            <p><span><i class="fas fa-mars"></i></span> @Model.AnimalModel.AnimalGender</p>
            <p><span><i class="fas fa-birthday-cake"></i></span> 3 years old</p>
            <p><span><i class="fas fa-search"></i></span> Looking for:@Model.AnimalModel.LookingFor</p>

            <h3>Owner</h3>
            <p><span><i class="fas fa-user"></i></span> @Model.UserProfileModel.FirstName @Model.UserProfileModel.LastName</p>
            <p><span><i class="fas fa-phone-alt"></i></span> @Model.UserProfileModel.PhoneNumber</p>
            <button type="button" class="premium-button" title="employs" onclick="DoComfirm()" return false>Edit</button>
            @section scripts{
                <script type="text/javascript">
                      function DoComfirm()
                        {
                                    window.location.href = "@Url.Action("ProfileEdit", "ProfileEdit")";
                        }
                </script>
            }
        </section>
    </article>
</section>
