
@addTagHelper *,Microsoft.AspNetCore.MVC.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tindyr - TEST</title>

    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/layout.css" />
    <!--<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />-->

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Finger+Paint|Lato|Montserrat|Open+Sans|Work+Sans:400,700&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.1/css/all.min.css">
</head>

<body>
    <header>
        <!-- Mini Navigation (Log in/Sign up), when the user is not logged-->
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="mini-nav">
                <ul>
                    <li>
                        <i class="fas fa-caret-right"></i>
                        <a asp-area="" asp-controller="Auth" asp-action="LogIn">Log in</a>
                    </li>

                    <li>
                        <i class="fas fa-caret-right"></i>
                        <a asp-area="" asp-controller="Auth" asp-action="Register">Sign Up</a>
                    </li>
                </ul>
            </div>
        } 
        else
        {
            <nav class="nav-container" id="nav">

                <!-- Logo and Main navigation, when the user is logged -->

                <a asp-area="" asp-controller="Home" asp-action="Index">Tindyr</a>
                
                <ul>
                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <li>
                        <a asp-area="" asp-controller="Home" asp-action="Premium">Get Premium</a>
                    </li>

                    <li>
                        <a asp-area="" asp-controller="Auth" asp-action="LogOut">Log Out</a>
                    </li>
                    <li>
                        <a asp-area="" asp-controller="ProfileEdit" asp-action="ProfileEdit">Profile</a>
                    </li>
                </ul>

                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <i class="fas fa-bars"></i>
                </a>

            </nav>
        }
        

    </header>

    <section class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </section>

    <footer>
        <section>
            <h3>Tindyr</h3>
            <p>A small and fun description of Tindyr, because I am running out of content here</p>
            <p class="copyright"><i class="fas fa-copyright"></i> 2019 Tindyr, All Rights Reserved.</p>
        </section>

        <section>
            <h4>Product</h4>
            <ul>
                <li><a href="#">Catalogue</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Premium">Get Premium</a></li>
                <li><a asp-area="" asp-controller="Home" asp-action="Donate">Donate</a></li>
            </ul>
        </section>

        <section>
            <h4>Contact</h4>
            <ul>
                <li>customer-support@tindyr.dk</li>
                <li>+4 8 15 16 23 42</li>
                <li>
                    <i class="fab fa-facebook"></i> <i class="fab fa-instagram"></i>
                    <i class="fab fa-twitter"></i> <i class="fab fa-linkedin-in"></i>
                </li>
            </ul>
        </section>

        <p class="copyright"><i class="fas fa-copyright"></i> 2019 Tindyr, All Rights Reserved.</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
