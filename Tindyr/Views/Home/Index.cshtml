@model Tindyr.Models.ProfileEdit.UserInfoStatusModel

@{
    ViewData["Title"] = "Home Page";
}

@if (!User.Identity.IsAuthenticated)
{
    @await Html.PartialAsync("_LandingPageNewUser")

}
else
{
    @if (!Model.Validated)//tells user he should edit his profile
    {
        @await Html.PartialAsync("_UrgeEditProfile");
    }
    else
    {
        @await Html.PartialAsync("_LandingPageExistingUser")
    }

}



